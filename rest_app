<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <!-- Configuration for log4net logging -->
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>

  <appSettings>
    <!-- Path to the RestartTool executable -->
    <add key="RestartToolPath" value="C:\path\to\restarttool.exe" />

    <!-- Path to the RestartTool configuration file -->
    <add key="RestartToolConfigPath" value="C:\path\to\restarttool.json" />

    <!-- Scheduled time to run the tool (format: HH:mm:ss) -->
    <add key="ScheduleTime" value="10:00:00" />

    <!-- Schedule type: "MondayOnly" or "Weekdays" -->
    <add key="ScheduleType" value="MondayOnly" />
  </appSettings>

  <log4net>
    <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="Logs\service-log.txt" />
      <appendToFile value="true" />
      <rollingStyle value="Size" />
      <maxSizeRollBackups value="5" />
      <maximumFileSize value="10MB" />
      <staticLogFileName value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger - %message%newline" />
      </layout>
    </appender>

    <appender name="EventLogAppender" type="log4net.Appender.EventLogAppender">
      <applicationName value="RestartToolService" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger - %message%newline" />
      </layout>
    </appender>

    <root>
      <level value="DEBUG" />
      <appender-ref ref="RollingFileAppender" />
      <appender-ref ref="EventLogAppender" />
    </root>
  </log4net>

  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
  </startup>
</configuration>
